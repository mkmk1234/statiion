<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/rg_radio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#17487d"
        android:checkedButton="@+id/rb_file">
        <RadioButton
            android:id="@+id/rb_file"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="目录浏览"
            android:textSize="20sp"
            android:button="@null"
            android:textColor="@color/tab_text_color"
            android:background="@drawable/selector_bg_tab"
            android:drawableLeft="@drawable/ic_access_time"/>
        <RadioButton
            android:id="@+id/rb_search"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="搜索"
            android:textSize="20sp"
            android:textColor="@color/tab_text_color"
            android:background="@drawable/selector_bg_tab"
            android:drawableLeft="@drawable/ic_access_time"/>
        <RadioButton
            android:id="@+id/rb_store"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="收藏夹"
            android:textSize="20sp"
            android:textColor="@color/tab_text_color"
            android:background="@drawable/selector_bg_tab"
            android:drawableLeft="@drawable/ic_access_time"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c3c3c3"/>
</LinearLayout>